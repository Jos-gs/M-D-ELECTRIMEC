Options -Indexes
RewriteEngine On

# ======================
# ðŸ”’ PROTEGER ARCHIVOS SENSIBLES
# ======================
<FilesMatch "\.(csv|env|ini|log|conf|sql)$">
  Require all denied
</FilesMatch>

# Bloquear acceso directo a carpetas internas
RewriteRule ^logs/ - [F,L]
RewriteRule ^docs/ - [F,L]

# ======================
# âœ¨ QUITAR .php DE LAS URLS
# ======================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

# ======================
# ðŸš« REDIRIGIR SI PONEN .php
# ======================
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]